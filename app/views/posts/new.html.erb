<h1 style="text-align: center; font-size: 28px; color: #333; margin-bottom: 20px;">Create a New Post</h1>

<div style="max-width: 500px; margin: 0 auto; padding: 20px; background: #f9f9f9; border-radius: 10px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
  <%= form_with(model: @post, local: true, style: "display: flex; flex-direction: column;") do |form| %>
    
    <div style="margin-bottom: 15px;">
      <%= form.label :name, style: "font-weight: bold; display: block; margin-bottom: 5px;" %>
      <%= form.text_field :name, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :email, style: "font-weight: bold; display: block; margin-bottom: 5px;" %>
      <%= form.email_field :email, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :description, style: "font-weight: bold; display: block; margin-bottom: 5px;" %>
      <%= form.text_area :description, rows: 4, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;" %>
    </div>

    <%= form.submit 'Create Post', style: "width: 100%; padding: 12px; background-color: #007BFF; color: white; font-size: 16px; border: none; border-radius: 5px; cursor: pointer;" %>
  <% end %>

  <div style="text-align: center; margin-top: 15px;">
    <%= link_to 'Back', posts_path, style: "text-decoration: none; color: #007BFF; font-size: 14px;" %>
  </div>
</div>
